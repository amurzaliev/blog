{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('profile_index') }}">Личный кабинет</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {{ app.request.attributes.get('_route') == 'profile_posts' ? 'active' }}">
                        <a class="nav-link" href="{{ path('profile_posts') }}">Статьи</a>
                    </li>
                </ul>
                <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger">Завершить сеанс</a>
            </div>
        </div>
    </nav>

    {% block content %}{% endblock %}
{% endblock %}